{% extends "layout.html.twig" %}

{% block title %}Inscription{% endblock %}

{% block content %}
    <h2 class="text-center">{{ block('title') }}</h2> 
<div class="well">
    {{ form_start(userForm) }}
    <div class="form-group">
        {{ form_label(userForm.username, "Login") }}
        {{ form_errors(userForm.username) }}
        
        {{ form_widget(userForm.username, { 'attr':  {
            'rows': '2',
            'class': 'form-control',
            'placeholder': 'Entrez votre login'
        }}) }}
        
        {{ form_label(userForm.password, "Mot de passe") }}
        {{ form_errors(userForm.password) }}
        {{ form_widget(userForm.password, { 'attr':  {
            'rows': '2',
            'class': 'form-control',
            'placeholder': 'Mot de passe'
        }}) }}
    </div>
    <div class="form-group">
        <input type="submit" class="btn  btn-primary btn-embossed" value="Valider l'inscription" />
    </div>
    {{ form_end(userForm) }}
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-success">
            {{ flashMessage }}
        </div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="alert alert-danger">
            {{ flashMessage }}
        </div>
    {% endfor %}
    
</div>
{% endblock %}